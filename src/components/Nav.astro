---
import ButtonContact from "./subcomponents/ButtonContact.astro";
import {
    Astronav,
    MenuItems,
    MenuIcon,
    Dropdown,
    DropdownItems,
} from "astro-navbar";

import logo1x from "/src/assets/logo@1x.png";
import logo2x from "/src/assets/logo@2x.png";
import logo3x from "/src/assets/logo@3x.png";
---

<header
    aria-label="Site Header"
    class="bg-gray-800/50 shadow-lg w-full shadow-gray-900"
>
    <section class="mx-auto max-w-screen-xl py-4 px-8 z-20">
        <div class="flex gap-4 items-center justify-between lg:gap-10">
            <div class="flex lg:flex-1 lg:w-0">
                <a href="/" class="image-animation hover:opacity-80">
                    <img
                        srcset={`${logo1x} 1x, ${logo2x} 2x, ${logo3x} 3x`}
                        sizes="(max-width: 640px) 80px, (min-width: 640px) 120px"
                        width="80"
                        height="64"
                        loading="eager"
                        alt="descriptive text"
                    />
                </a>
            </div>

            <nav
                aria-label="Site Nav"
                class="font-medium text-sm text-md gap-8 hidden md:flex"
            >
                <a
                    class="transition-smooth ease-in-out text-gray-300"
                    href="/blog">Blog</a
                >
                <a
                    class="transition-smooth ease-in-out text-gray-300"
                    href="/projects">Projekty</a
                >
            </nav>

            <div class="flex-1 gap-4 hidden items-center justify-end sm:flex">
                <ButtonContact />
            </div>
        </div>
    </section>
</header>
