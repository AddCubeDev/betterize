---
import { getPosts } from "./../../typescript/functions/blog_posts";
import type { ApiPostPost } from "./../../typescript/types/schemas";
import BlogPostsListElement from "./BlogPostsListElement.astro";

const posts = await getPosts();
---

<ul
    class="grid w-full grid-cols-1 gap-4 pb-24 main-content md:grid-cols-2 lg:grid-cols-3"
>
    {posts.map((post: ApiPostPost) => <BlogPostsListElement post={post} />)}
</ul>
