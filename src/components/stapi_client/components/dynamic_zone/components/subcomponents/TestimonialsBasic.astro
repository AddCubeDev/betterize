---
import Testimonial from "./Testimonial.astro";
import type { Testimonials } from "./../../../../typescript/types/components";

interface Props {
    data: Testimonials;
}

const { data } = Astro.props;
---

<div class="w-full py-20 bg-gradient-to-br from-neutral-900 to-gray-900">
    <div class="max-w-6xl px-4 mx-auto">
        <h2 class="mx-auto mb-10 header-2">{data.headline}</h2>
        <div class="grid grid-cols-1 gap-20 lg:gap-4 lg:grid-cols-3">
            {
                data.testimonial.map((item) => {
                    return <Testimonial data={item} />;
                })
            }
        </div>
    </div>
</div>
