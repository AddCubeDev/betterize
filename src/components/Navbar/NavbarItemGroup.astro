---
import { Icon } from "astro-iconify";
import NavBarSubItem from "./NavbarSubItem.astro";

interface Props {
    title?: string;
    paragraph?: string;
    src?: string;
}

const {
    title = "I am a title of this component",
    paragraph = "Paragraph is very important thing in components. It usually provide usefull infomations to the reader. It would be nice if paragraph would be longer than title so i am writing this.",
    src = "/src/assets/logo.png ",
} = Astro.props;
---

<div class="relative group">
    <li class="relative list-none group">
        <a
            class="flex items-center h-20 text-gray-300 ease-in-out transition-smooth"
            href="#"
        >
            <div class="flex items-center justify-center">
                Blog
                <Icon
                    name="material-symbols:arrow-drop-down"
                    style="color: white; width:30px; height:30px"
                />
            </div>
        </a>
        <div
            class="absolute z-30 invisible transition duration-500 ease-in-out transform translate-y-0 opacity-0 top-10 -left-52 group-hover:transform group-hover:visible group-hover:translate-y-5 group-hover:opacity-100 z-1 min-w-max"
        >
            <div
                class="relative w-full p-4 shadow-xl group bg-neutral-900 top-4 rounded-xl"
            >
                <div class="relative">
                    <div class="grid grid-cols-3 gap-6 mb-4 text-md">
                        <div>
                            <ul>
                                <NavBarSubItem
                                    href="/projects/swiperight"
                                    title="swiperight.pl"
                                    src="/src/assets/swiperight.jpg"
                                />
                            </ul>
                        </div>
                        <div>
                            <ul>
                                <NavBarSubItem
                                    href="/projects/betterize"
                                    title="betterize.pl"
                                    src="/src/assets/betterize.jpg"
                                />
                            </ul>
                        </div>
                        <div>
                            <ul>
                                <NavBarSubItem
                                    title="dubbleup.com"
                                    src="/src/assets/marketliners.jpg"
                                />
                            </ul>
                        </div>
                    </div>
                    <div class="w-full border-gray-800 border-t-1">
                        <a
                            href="/projects"
                            class="flex items-center justify-center h-8 mx-auto mt-2 hover:text-gray-400 transition-smooth"
                        >
                            Zobacz wszystkie</a
                        >
                    </div>
                </div>
            </div>
        </div>
    </li>
</div>
