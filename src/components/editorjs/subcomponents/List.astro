---
enum Style {
    Ordered = "ordered",
    Unordered = "unordered",
}

interface Props {
    style: Style;
    items: [string];
}

const { style, items } = Astro.props;
---

<div class="px-10">
    {
        () => {
            if (style == Style.Ordered) {
                return items.map((item: string, index: number) => (
                    // index + 1 is needed to start with 1 not 0
                    <p>
                        {index + 1}
                        <Fragment set:html={item} />
                    </p>
                ));
            } else {
                return items.map((item: string) => (
                    <Fragment set:html={item} />
                ));
            }
        }
    }
</div>
