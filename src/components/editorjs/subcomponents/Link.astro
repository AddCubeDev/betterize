---
import { Img } from "astro-imagetools/components";

interface Props {
    link: string;
    title: string;
    description: string;
    image_url: string;
}

const { link, title, description, image_url } = Astro.props;
---

<div class="bg-neutral-500">
    <a href={link}>
        <div class="grid grid-cols-2 gap-4">
            <div>
                <h2 class="blog-header">{title}</h2>
                <p>{description}</p>
            </div>
            <Img
                src={image_url}
                alt="link_picture"
                placeholder="none"
                width={200}
            />
        </div>
    </a>
</div>
