---
interface Props {
    title: string;
    message: string;
}

const { title, message } = Astro.props;
---

<div class="flex flex-col p-4 text-center bg-red-600 rounded-md">
    <div class="text-2xl font-bold">
        <Fragment set:html={title} />
    </div>
    <div>
        <Fragment set:html={message} />
    </div>
</div>
