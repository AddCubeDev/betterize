---
interface Props {
    title?: string;
    paragraph?: string;
    src?: string;
    number?: number;
    connect?: string;
}
const {
    title = "Jestem pytaniem, które ktoś mógłby zadać",
    paragraph = "Lorem ipsum dolor sit amet consectetur, adipisicing elit. Ab hic veritatis molestias culpa in, recusandae laboriosam neque aliquid libero nesciunt voluptate dicta quo officiis explicabo consequuntur distinctio corporis earum similique! ",
    number = "1",
    src = "/src/assets/search.png",
    connect = "hidden",
} = Astro.props;
---

<div>
    <div
        data-tilt
        data-tilt-axis="x"
        data-tilt-max="4"
        data-tilt-speed="800"
        data-tilt-perspective="1000"
        class="relative flex w-full text-left rounded-lg shadow-xl border-1 border-sky-500/50 element h-84 card schowaj"
    >
        <div
            class="grid items-center justify-start grid-cols-2 px-2 py-4 element card-content"
        >
            <div class="pl-12">
                <h2 class="mb-2 text-4xl font-bold">
                    {title}
                </h2>
                <p class="text-sm">
                    {paragraph}
                </p>
            </div>
            <div class="pb-6 mx-auto">
                <img src={src} alt={title} width="250" height="250" />
            </div>
        </div>
        <p class="left-2 top-1 text-[100px] outlined-text absolute">
            {number}
        </p>
        <div
            class="absolute inset-0 rounded-lg animate-pulse bg-gradient-to-br from-indigo-500 via-teal-500 to-sky-500 bg-blur2 -z-1"
        >
        </div>
    </div>
    <div
        class="w-6 h-20 mx-auto bg-gradient-to-b from-sky-900 via-sky-500 to-sky-900 ${connect}"
    >
    </div>
</div>
<style>
    #cards {
        width: calc(100% - 20px);
    }

    #cards:hover > .card::after {
        opacity: 1;
    }
    .card {
        position: relative;
    }

    .card::before,
    .card::after {
        border-radius: inherit;
        content: "";
        height: 100%;
        left: 0px;
        opacity: 0;
        position: absolute;
        top: 0px;
        transition: opacity 500ms;
        width: 100%;
    }

    .card::before {
        background: radial-gradient(
            800px circle at var(--mouse-x) var(--mouse-y),
            rgba(0, 132, 255, 0.1),
            transparent 40%
        );

        z-index: 3;
    }

    .card::after {
        background: radial-gradient(
            600px circle at var(--mouse-x) var(--mouse-y),
            rgba(0, 183, 255, 0.4),
            transparent 40%
        );
        z-index: 1;
    }

    .card > .card-content {
        background-color: var(--card-color);
        border-radius: inherit;

        inset: 1px;
        position: absolute;
        z-index: 2;
    }
</style>
