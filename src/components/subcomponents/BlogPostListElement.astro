const blog1 = "/src/assets/swiperight.jpg";
const blog2 = "/src/assets/betterize.jpg";
const blog3 = "/src/assets/marketliners.jpg";
---

<div
    class="rounded-md flex flex-col bg-gray-800 transition-smooth shadow-2xl shadow-sky-900/20 hover:(transform scale-105)"
>
    <a class="hover:text-sky-200/50" href={blok.slug}>
        <div class="rounded-t-md h-64 overflow-hidden">
            <Picture
                src={blog3}
                alt="blog-post-image"
                objectFit="cover"
                layout="fill"
                loading="eager"
                quality="70"
                placeholder="blurred"
                height={500}
                sizes="600px"
            />
        </div>

        <div class="p-4 pb-8 overflow-hidden relative">
            <div class="bg-grid inset-0 -z-0 absolute"></div>
            <time class="text-sm text-gray-400/30 items-left">{blok.date}</time>
            <h2
                class="font-medium font-bold pb-2 text-2xl text-gray-100 capitalize"
            >
                {blok.title}
            </h2>
            <p class="max-w-md text-base text-left text-gray-300">
                {blok.description}
            </p>
        </div>
    </a>
</div>
