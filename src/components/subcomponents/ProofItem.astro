---
import {
    Img,
    Picture,
    BackgroundPicture,
    BackgroundImage,
} from "astro-imagetools/components";

const {
    title = "Jestem tytułem artykułu",
    paragraph = "Lorem ipsum dolor sit amet consectetur, adipisicing elit. Ab hic veritatis molestias culpa in, recusandae laboriosam neque aliquid libero nesciunt voluptate dicta quo officiis explicabo consequuntur distinctio corporis earum similique! ",
    src = "/src/assets/swiperight.jpg",
    href = "/projects/swiperight",
} = Astro.props;
---

<div
    class="rounded-md flex flex-col mx-auto max-w-md bg-gray-800 w-full transition-smooth shadow-2xl main-content relative xl:max-w-auto xl:shadow-sky-500/20 lg:hover:(transform scale-105)"
>
    <a class="hover:text-sky-200/50" href={href}>
        <div class="w-full h-64 overflow-hidden rounded-t-md">
            <Picture
                src={src}
                alt="blog-post-image"
                objectFit="cover"
                layout="fill"
                loading="eager"
                quality="70"
                placeholder="blurred"
            />
        </div>

        <div class="p-4 pb-8 overflow-hidden">
            <div class="absolute inset-0 bg-grid -z-0"></div>
            <time class="text-sm text-gray-400/30 items-left">01.01.2023</time>
            <h2 class="pb-2 text-2xl font-bold text-gray-100 capitalize h-28">
                {title}
            </h2>
            <p class="max-w-md text-base text-left text-gray-300">
                {paragraph}
            </p>
        </div>
    </a>
</div>
