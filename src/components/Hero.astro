---
const bg = "/src/assets/bg-hero.png";
import { BackgroundImage } from "astro-imagetools/components";
import Faded from "./elements/Faded.astro";
// import herobg from "@assets/hero-bg.png";

/*
artDirectives attribute (see below) is used ONLY to make Lighthouse happy !
*/
---

<div class="relative">
    <Faded direction="bottom" />
    <BackgroundImage
        src={bg}
        format="avif"
        placeholder="blurred"
        brightness="0.8"
        saturation="0.2"
        backgroundSize="cover"
        breakpoints={{ count: 4, minWidth: 400, maxWidth: 2560 }}
        artDirectives={[
            {
                src: bg,
                media: "(orientation: potrait)",
            },
        ]}
    >
        <section class="relative z-10 flex h-128 main-content">
            <div class="flex flex-col items-center justify-center mx-auto">
                <h1 class="header-1">
                    robimy <span
                        class="text-transparent bg-clip-text bg-gradient-to-r from-sky-400 to-indigo-500 header-1"
                    >
                        Szybkie i nowoczesne
                    </span>
                    strony internetowe
                </h1>
                <h2 class="header-2">
                    Chcesz mieć lepsze pozycjonowanie i większe zyski? Postaw na
                    szybkość i jakość swojej strony internetowej z Betterize!
                </h2>
            </div>
        </section>
    </BackgroundImage>
</div>

