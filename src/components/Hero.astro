---
const bghero = "/src/assets/bg-hero.png";

import { BackgroundImage } from "astro-imagetools/components";
import Faded from "./elements/Faded.astro";

/*
artDirectives attribute (see below) is used ONLY to make Lighhouse happy !
*/
---

<div class="relative">
    <Faded direction="bottom" />
    <BackgroundImage
        src={bghero}
        format="avif"
        placeholder="blurred"
        brightness={0.8}
        saturation={0.1}
        backgroundSize="cover"
        breakpoints={{ count: 4, minWidth: 400, maxWidth: 2560 }}
        artDirectives={[
            {
                src: bghero,
                media: "(orientation: potrait)",
            },
        ]}
    >
        <section class="relative z-10 flex h-128 main-content lg:h-screen">
            <div class="flex flex-col mx-auto mt-32 lg:mt-64">
                <h1 class="header-1">
                    robimy <span
                        class="text-transparent bg-clip-text bg-gradient-to-r from-sky-400 to-indigo-500 header-1"
                    >
                        Szybkie i nowoczesne
                    </span>
                    strony internetowe
                </h1>
                <h2 class="header-2">
                    Chcesz mieć lepsze pozycjonowanie i większe zyski? Postaw na
                    szybkość i jakość swojej strony internetowej z Betterize!
                </h2>
            </div>
        </section>
    </BackgroundImage>
</div>

