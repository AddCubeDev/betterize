---
const herobg = "/src/assets/hero-bg.png";
const rocket = "/src/assets/rocket.png";
// import herobg from "@assets/hero-bg.png";

import {
    Img,
    Picture,
    BackgroundPicture,
    BackgroundImage,
} from "astro-imagetools/components";
---

<div class="bg-grid">
    <BackgroundImage
        src={herobg}
        backgroundSize="cover"
        quality={90}
        breakpoints={{ count: 6, minWidth: 320, maxWidth: 2560 }}
    >
        <div class="flex h-screen z-20">
            <div class="flex flex-col mx-auto mt-16 inline-flex lg:mt-96">
                <h1 class="header-1">
                    we make <span
                        class="bg-clip-text bg-gradient-to-r from-sky-400 to-indigo-500 text-transparent header-1"
                    >
                        flying fast websites
                    </span>
                </h1>
                <h2 class="header-2">
                    Make Google SEO agents fall in love with your brand!
                </h2>
            </div>
        </div>
    </BackgroundImage>
</div>

