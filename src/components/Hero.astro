---
const bg = "/src/assets/bgkupa.png";
// import herobg from "@assets/hero-bg.png";

import { BackgroundImage } from "astro-imagetools/components";
import Faded from "./elements/Faded.astro";

interface Props {
    image: {
        src: string;
        brightness: number;
        saturation: number;
    };
}

const { image } = Astro.props;
---

<div class="relative">
    <Faded direction="bottom" />
    <BackgroundImage
        src={image.src}
        format="avif"
        placeholder="blurred"
        brightness={image.brightness}
        saturation={image.saturation}
        backgroundSize="cover"
        breakpoints={{ count: 4, minWidth: 400, maxWidth: 2560 }}
        artDirectives={[
            {
                src: "/src/assets/bgkupa.png",
                media: "(orientation: potrait)",
            },
        ]}
    >
        <section class="flex h-128 z-20 z-10 main-content relative lg:h-screen">
            <div class="flex flex-col mx-auto mt-32 inline-flex lg:mt-64">
                <h1 class="header-1">
                    robimy <span
                        class="bg-clip-text bg-gradient-to-r from-sky-400 to-indigo-500 text-transparent header-1"
                    >
                        Szybkie i nowoczesne
                    </span>
                    strony internetowe
                </h1>
                <h2 class="header-2">
                    Chcesz lepsze pozycjonowanie i większe zyski? Postaw na
                    szybkość i jakość swojej strony internetowej z Betterize!
                </h2>
            </div>
        </section>
    </BackgroundImage>
</div>

