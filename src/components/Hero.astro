---
const herobg = "/src/assets/hero-bg.png";
const rocket = "/src/assets/rocket.png";
// import herobg from "@assets/hero-bg.png";

import {
    Img,
    Picture,
    BackgroundPicture,
    BackgroundImage,
} from "astro-imagetools/components";
---

<BackgroundImage
    src={herobg}
    backgroundSize="cover"
    quality={90}
    breakpoints={{ count: 6, minWidth: 320, maxWidth: 2560 }}
>
    <div class="border right-0 z-1 absolute">
        <Img
            src={rocket}
            class="fixed"
            alt="A random image"
            backgroundSize="cover"
            breakpoints={[200, 400, 800]}
            placeholder="blur"
            objectFit="contain"
        />
    </div>
    <div class="flex h-screen z-2">
        <div class="flex flex-col mx-auto mt-96">
            <h1 class="header-1">jestem elementem Hero</h1>
            <h2 class="header-2">
                tekst mowiacy o tym jak super jest ten template. Co wiecej mozna
                o nim powiedziec? Nie wiem
            </h2>
        </div>
    </div>
</BackgroundImage>

