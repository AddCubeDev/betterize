---
import { Img } from "astro-imagetools/components";
import ButtonContact from "./subcomponents/ButtonContact.astro";
import ButtonSecondary from "./subcomponents/ButtonSecondary.astro";
---

<section class="relative z-10">
    <div
        class="absolute w-full transform -translate-y-10 h-128 sm:(h-96) lg:(h-128 translate-y-0) bg-gradient-to-br from-gray-700/60 via-gray-800/60 to-purple-900/20 skew-y-4"
    >
    </div>
    <div class="flex flex-col mb-10 lg:mt-16 lg:flex-row main-content">
        <div class="flex flex-col justify-center gap-6 mx-auto lg:text-left">
            <h1 class="mb-0 header-1">
                Tworzymy <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-sky-400 to-indigo-500 header-1"
                >
                    Szybkie i nowoczesne
                </span>
                strony internetowe
            </h1>
            <h2 class="font-normal header-3 font-f">
                Chcesz mieć lepsze pozycjonowanie i większe zyski? Postaw na
                szybkość i jakość swojej strony internetowej z Betterize!
            </h2>
            <div class="flex gap-2">
                <ButtonContact />
                <ButtonSecondary />
            </div>
        </div>
        <div
            class="items-center justify-center hidden overflow-hidden rounded-lg shadow-2xl lg:flex"
        >
            <Img
                src="/src/assets/hero6.jpg"
                width={800}
                loading="eager"
                alt="descriptive text"
            />
        </div>
    </div>
</section>
