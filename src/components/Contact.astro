---
const rocket = "/src/assets/contact.jpg";
const arrow = "/src/assets/arrow.png";
import {
    Img,
    Picture,
    BackgroundPicture,
    BackgroundImage,
} from "astro-imagetools/components";
---

<div
    class="flex flex-col h-96 items-center justify-center lg:h-screen lg:h-196"
>
    <div class="flex flex-col mx-auto gap-6 items-center justify-center">
        <span
            class="bg-clip-text bg-gradient-to-r from-sky-400 to-indigo-500 text-transparent header-1"
        >
            take your online presence to the next level
        </span>

        <p class="ordinary-text">
            Drop us a message on contact@betterize.pl and we will quickly get
            back to you. We are always happy to chat about new projects and
            opportunities
        </p>
        <a
            class="rounded-md font-medium bg-blue-600 text-md text-white py-2 px-5 transition-smooth ease-in-out w-32 hover:(transition-smooth transform scale-105 text-gray-900)"
            href=""
        >
            Contact Us
        </a>
    </div>

    <!-- <div class="mx-auto mt-auto">
        <Img src={arrow} alt="asdasdasd" placeholder="none" />
    </div> -->
</div>
<div class="flex">
    <div class="bg-white mx-auto h-96 w-96 faded-bottom"></div>
    <div class="bg-white mx-auto h-96 w-96 faded-top"></div>
    <div class="bg-white mx-auto h-96 w-96 faded-full"></div>
</div>
