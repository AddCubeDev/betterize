---
const star = "/src/assets/starship.png";
const arrow = "/src/assets/arrow.png";
import {
    Img,
    Picture,
    BackgroundPicture,
    BackgroundImage,
} from "astro-imagetools/components";

import ButtonContact from "./subcomponents/ButtonContact.astro";
import FAQsection from "./subcomponents/FAQsection.astro";
---

<div class="flex flex-col relative items-center justify-center lg:pb-40">
    <div class="bg-grid inset-0 bottom-0 -z-1 faded-top absolute"></div>

    <div
        class="bg-gradient-to-b from-transparent to-sky-800/30 h-32 w-full bottom-0 -z-2 absolute"
    >
    </div>

    <section
        class="flex flex-col py-20 gap-6 items-center justify-center main-content"
    >
        <span
            class="bg-clip-text bg-gradient-to-r from-sky-400 to-indigo-500 text-transparent header-1"
        >
            Pozwól googlowi zdobywać dla Ciebie klientów dzięki nowoczesnej
            stronie internetowej.
        </span>

        <p class="ordinary-text">
            Napisz do nas na kontakt@betterize.pl lub użyj formularza
            kontaktowego klikając w przycisk poniżej
        </p>
        <ButtonContact />

        <!-- <div class="mx-auto mt-auto">
        <Img src={arrow} alt="asdasdasd" placeholder="none" />
    </div> -->
    </section>
    <FAQsection />
</div>
