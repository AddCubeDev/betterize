---
import type {
    Gallery,
    GalleryImage,
} from "@components/strapidynamic/typescript/types";
import { Img } from "astro-imagetools/components";
import { getImageUrl } from "@typescript/strapiApi";

interface Props {
    data: Gallery;
}

const { data } = Astro.props;
---

<div>
    <h2 class="mx-auto header-2">{data.headline}</h2>
    <div
        class={`max-w-6xl mx-auto gap-4 grid grid-cols-${String(data.columns)}`}
    >
        {
            data.image.map((item: GalleryImage) => {
                return (
                    <div>
                        <Img
                            src={getImageUrl(item.image)}
                            alt="advantage_item"
                            placeholder="none"
                            width={100}
                            height={100}
                        />
                    </div>
                );
            })
        }
    </div>
</div>

