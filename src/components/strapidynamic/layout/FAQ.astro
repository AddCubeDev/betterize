---
import FAQItem from "@components/strapidynamic/subcomponents/FAQItem.astro";
import type { FAQ } from "@components/strapidynamic/typescript/types";

interface Props {
    data: FAQ;
}

const { data } = Astro.props;
---

<div class="flex flex-col w-full max-w-6xl px-4 mx-auto">
    <h2 class="mx-auto header-2">{data.headline}</h2>
    <div
        class="flex flex-col w-full max-w-6xl grid-cols-1 gap-4 pb-20 mx-auto lg:w-2xl"
    >
        {
            data.faq_element.map((item) => {
                return <FAQItem data={item} />;
            })
        }
    </div>
</div>
