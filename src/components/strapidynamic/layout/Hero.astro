---
import { getImageUrl } from "@typescript/strapiApi";
import HeroHorizontal from "@components/strapidynamic/subcomponents/HeroHorizontal.astro";
import HeroVertical from "@components/strapidynamic/subcomponents/HeroVertical.astro";
import type { Hero } from "@components/strapidynamic/typescript/types";
import { HeroType } from "@components/strapidynamic/typescript/types";

interface Props {
    data: Hero;
}

const { data } = Astro.props;
---

{
    () => {
        if (data.type == HeroType.horizontal) {
            return (
                <HeroHorizontal
                    headline={data.headline}
                    image_url={getImageUrl(data.image)}
                    content={data.content}
                />
            );
        } else {
            return (
                <HeroVertical
                    headline={data.headline}
                    image_url={getImageUrl(data.image)}
                    content={data.content}
                />
            );
        }
    }
}
