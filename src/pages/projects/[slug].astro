---
import Layout from "@layouts/Layout.astro";
import Nav from "@components/Navbar/Nav.astro";
import Footer from "@components/Footer.astro";
import { getCaseStudiesSlugs } from "@components/stapi_client/index";
import type { ApiCaseStudyCaseStudy } from "@components/stapi_client/index";
import CaseStudyPage from "@components/stapi_client/components/case_studies/CaseStudyPage.astro";

export async function getStaticPaths() {
    const slugs = await getCaseStudiesSlugs();

    return slugs.map((slug: string) => ({
        params: { slug: slug },
    }));
}
---

<Layout>
    <div class="mb-10 lg:mb-20">
        <Nav />
    </div>
    <CaseStudyPage slug={Astro.params.slug} />

    <div class="mt-auto">
        <Footer />
    </div>

    <script src="vanilla-tilt"></script>
</Layout>

