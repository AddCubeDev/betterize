---
import Layout from "@layouts/Layout.astro";
import Nav from "@components/Nav.astro";
import Hero from "@components/Hero.astro";
import Footer from "@components/Footer.astro";
import FAQcard from "@components/subcomponents/FAQcard.astro";
---

<Layout>
    <Nav />
    <main
        class="flex flex-col mx-auto min-h-screen p-4 gap-16 main-content items-center justify-center lg:p-0"
    >
        <h1 class="pt-20 header-1">Contact Us</h1>
        <div class="mx-auto w-128">
            <form
                action="mailto:test@test.com"
                method="post"
                enctype="text/plain"
                class="space-y-4"
            >
                <div>
                    <label class="sr-only" for="name">Name</label>
                    <input
                        class="rounded-lg bg-neutral-800 border-gray-200 text-sm w-full p-3"
                        placeholder="Name"
                        type="text"
                        id="name"
                    />
                </div>

                <div>
                    <label class="sr-only" for="email">Email</label>
                    <input
                        class="rounded-lg bg-neutral-800 border-gray-200 text-sm w-full p-3"
                        placeholder="Email address"
                        type="email"
                        id="email"
                    />
                </div>

                <div>
                    <label class="sr-only" for="message">Message</label>

                    <textarea
                        class="rounded-lg bg-neutral-800 border-gray-200 text-sm w-full p-3"
                        placeholder="Message"
                        rows="8"
                        id="message"></textarea>
                </div>

                <div class="mt-4">
                    <button
                        type="submit"
                        class="rounded-lg flex font-medium bg-blue-600 text-white py-3 px-5 inline-block items-left sm:w-auto"
                    >
                        Send Enquiry
                    </button>
                </div>
            </form>
        </div>

        <div
            class="border mx-auto max-w-screen grid pb-20 w-5xl gap-4 grid-cols-1 main-content lg:grid-cols-2"
        >
            <FAQcard />
            <FAQcard />
            <FAQcard />
            <FAQcard />
            <FAQcard />
        </div>
    </main>
    <Footer />
</Layout>
