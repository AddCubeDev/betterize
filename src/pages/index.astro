---
import Layout from "@layouts/Layout.astro";
// import FancyBg from "@components/subcomponents/FancyBg.astro";
import Nav from "@components/Navbar/Nav.astro";

import Hero from "@components/Hero.astro";
import Marketing0 from "@components/Marketing0.astro";
import Marketing1 from "@components/Marketing1.astro";
import Marketing2 from "@components/Marketing2.astro";
import Proof from "@components/Proof.astro";
import StepByStep from "@components/StepByStep.astro";
import Section1 from "@components/Section1.astro";
import Contact from "@components/Contact.astro";
import Footer from "@components/Footer.astro";
import { Img, BackgroundImage } from "astro-imagetools/components";
import Faded from "@components/elements/Faded.astro";
---

<Layout
    title="Flying Fast Websites"
    description="Tworzymy wydajne i konwertujÄ…ce strony internetowe"
>
    <!-- <FancyBg /> -->

    <BackgroundImage
        src="/src/assets/herobg4.jpg"
        format="webp"
        placeholder="blurred"
        breakpoints={[1000, 1930, 2560, 3440]}
        includeSourceFormat={false}
        fallbackFormat="webp"
        brightness={0.55}
        tint="251754"
        artDirectives={[
            {
                src: "/src/assets/herobg4.jpg",
                media: "(orientation: landscape)",
                placeholder: "blurred",
                breakpoints: [1000, 1930, 2560, 3440],
                includeSourceFormat: false,
                fallbackFormat: "webp",
            },
        ]}
    >
        <section class="relative z-10">
            <Faded direction="bottom" />
            <Faded direction="top" />
            <Nav />
            <div class="mt-20">
                <Hero />
            </div>
        </section>
    </BackgroundImage>

    <main class="flex flex-col min-h-screen mx-auto lg:mt-40 gap-28 lg:gap-40">
        <Marketing0 />
        <Marketing1 />
        <Section1 />
        <Marketing2 />
        <Proof />
        <StepByStep />
        <!-- <Features /> -->
        <Contact />
    </main>
    <div class="mt-auto">
        <Footer />
    </div>

    <script>
        import {
            showWhenInView,
            CSS_CLASS_SHOW,
        } from "/src/typescript/scroll.ts";

        showWhenInView(".show-on-scroll", CSS_CLASS_SHOW);
        showWhenInView(".show-on-scroll-alt", CSS_CLASS_SHOW);
    </script>

    <script>
        import { isMobileDevice } from "/src/typescript/isMobile.ts";

        if (!isMobileDevice()) {
            let script = document.createElement("script");

            script.src = "/scripts/vanilla-tilt.min.js";

            script.onload = function () {
                window.VanillaTilt = VanillaTilt;
                VanillaTilt.init(
                    document.querySelectorAll("[data-tilt-desktop]")
                );
            };

            document.body.appendChild(script);
        }
    </script>
</Layout>
