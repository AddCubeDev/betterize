---
import Layout from "@layouts/Layout.astro";
import Nav from "@components/Nav.astro";
import Hero from "@components/Hero.astro";

import Section1 from "@components/Section1.astro";
import Section2 from "@components/Section2.astro";
import Section3 from "@components/Section3.astro";

import Testimonials from "@components/Testimonials.astro";
import Contact from "@components/Contact.astro";

import Footer from "@components/Footer.astro";
---

<Layout>
    <Nav />
    <main class="flex flex-col mx-auto min-h-screen gap-2 lg:gap-4 lg:gap-16">
        <Section1 />
        <Hero />
        <Section2 />
        <Section3 />
        <Testimonials />
        <Contact />
    </main>
    <div class="mt-auto">
        <Footer />
    </div>
</Layout>
