    <main class="flex flex-col mx-auto min-h-screen gap-2 lg:gap-16">
        <Hero />
        <Marketing1 />
        <Marketing2 />
        <Proof />
        <StepByStep />
        <Section1 />
        <Testimonials />
        <Contact />
