---
import Layout from "@layouts/Layout.astro";
import Nav from "@components/Nav.astro";
import Hero from "@components/Hero.astro";
import Footer from "@components/Footer.astro";
import FAQcard from "@components/subcomponents/FAQcard.astro";
---

<Layout>
    <Nav />
    <main
        class="flex flex-col mx-auto min-h-screen p-4 gap-16 main-content items-center justify-center"
    >
        <h1 class="pt-20 header-1">Contact Us</h1>
        <div class="mx-auto max-w-full w-128">
            <form action="" class="space-y-4 text-left">
                <div>
                    <label class="text-sm px-1 text-gray-200" for="name"
                        >Full Name:</label
                    >

                    <input
                        class="border rounded-lg bg-neutral-800 border-gray-200/20 text-sm w-full p-3 focus:(border-gray-200/60)"
                        placeholder="Name"
                        type="text"
                        id="name"
                    />
                </div>

                <div>
                    <label class="text-sm px-1 text-gray-200" for="email"
                        >Email</label
                    >
                    <input
                        class="border rounded-lg bg-neutral-800 border-gray-200/20 text-sm w-full p-3 focus:(border-gray-200/60)"
                        placeholder="Email address"
                        type="email"
                        id="email"
                    />
                </div>

                <div>
                    <label class="text-sm px-1 text-gray-200" for="message"
                        >Message</label
                    >

                    <textarea
                        class="border rounded-lg bg-neutral-800 border-gray-200/20 text-sm w-full p-3 focus:(border-gray-200/60)"
                        placeholder="Message"
                        rows="8"
                        id="message"></textarea>
                </div>

                <div class="mt-4">
                    <button
                        type="submit"
                        class="rounded-lg flex font-medium bg-blue-600 text-white py-3 px-8 transition-smooth inline-block items-left sm:w-auto hover:(bg-transparent border-gray-200/80)"
                    >
                        Send Enquiry
                    </button>
                </div>
            </form>
        </div>

        <div
            class="mx-auto max-w-full grid pb-20 w-5xl gap-4 grid-cols-1 lg:grid-cols-2"
        >
            <FAQcard />
            <FAQcard />
            <FAQcard />
            <FAQcard />
            <FAQcard />
        </div>
    </main>
    <Footer />
</Layout>
