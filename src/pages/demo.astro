---
import Layout from "@layouts/Layout.astro";
import Nav from "@components/Navbar/Nav.astro";
import Footer from "@components/Footer.astro";
import DynamicZone from "@components/strapidynamic/DynamicZone.astro";
import { getDemo } from "@typescript/strapiApi";

const dynamic = await getDemo();
---

<Layout>
    <div class="mb-10 lg:mb-20">
        <Nav />
    </div>
    <main
        class="flex flex-col mx-auto min-h-screen max-w-6xl p-4 gap-2 xl:(p-0 gap-28)"
    >
        <DynamicZone blocks={dynamic} />
    </main>
    <div class="mt-auto">
        <Footer />
    </div>
</Layout>
