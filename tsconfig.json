{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@assets/*": ["src/assets/*"],
            "@layouts/*": ["src/layouts/*"]
        },
        // Needed for TypeScript intellisense in the template inside Vue files
        "jsx": "preserve"
    }
}
